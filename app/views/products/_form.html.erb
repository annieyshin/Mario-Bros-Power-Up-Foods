<%= render "layouts/errors", :object => @product %>

<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <hr>
  <%= f.label :cost %>
  <%= f.number_field :cost %>
  <hr>
  <%= f.label :country_of_origin %>
  <%= f.text_field :country_of_origin %>
  <hr>
  <%= f.submit %>
<% end %>
