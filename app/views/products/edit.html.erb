<h1>Edit Product</h1>

<%= render "layouts/errors", :object => @product %>

<%= form_for @product do |f| %>
  <%= f.label :"Edit Name" %>
  <%= f.text_field :name %>
  <hr>
  <%= f.label :"Edit Cost" %>
  <%= f.number_field :cost %>
  <hr>
  <%= f.label :"Edit Country of Origin" %>
  <%= f.text_field :country_of_origin %>
  <hr>
  <%= f.submit %>
<% end %>

<p><%= link_to "Return to product", product_path %></p>
